{
  "name": "review-tools",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -ws build",
    "typecheck": "npm run -ws typecheck",
    "lint": "npm run -ws lint",
    "test": "npm run -ws test",
    "dev:api": "npm --workspace services/api run dev",
    "dev:worker": "npm --workspace services/worker run dev",
    "dev:web": "npm --workspace apps/web run dev"
  }
}